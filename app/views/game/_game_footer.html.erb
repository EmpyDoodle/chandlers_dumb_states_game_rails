<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="row center-align">
        <%= form_with url: '/', method: :get do |form| %>
          <%= form.hidden_field :quit, value: true %>
          <button class="btn waves-effect waves-light" type="submit" name="quit">
            <i class="material-icons right">exit_to_app</i>Quit Game
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
